@page
@model Encontro.WebUI.Areas.Admin.Pages.Users.RegisterModel
@{
    ViewData["Title"] = "Novo Usuário";
    ViewData["Breadcrumbs"] = "<li class='breadcrumb-item'><a asp-page='/Index'>Home</a></li><li class='breadcrumb-item'><a asp-area='Admin' asp-page='/Users/Index'>Usuários</a></li><li class='breadcrumb-item active' aria-current='page'>Novo</li>";
}

<div class="container mt-4">
    <!-- Cabeçalho -->
    <div class="row mb-3">
        <div class="col">
            <h1><i class="bi bi-person-plus-fill"></i> Novo Usuário</h1>
        </div>
        <div class="col text-end">
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </div>

    <!-- Formulário -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-person-fill"></i> Informações do Usuário
        </div>
        <div class="card-body">
            <form method="post" id="registerForm">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">
                        <i class="bi bi-envelope-fill"></i> Email <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.Email" 
                           class="form-control" 
                           type="email"
                           placeholder="usuario@exemplo.com"
                           required
                           maxlength="100"
                           autofocus
                           title="Digite um email válido"
                           oninvalid="this.setCustomValidity('Por favor, digite um email válido.')"
                           oninput="this.setCustomValidity('')" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Senha -->
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">
                        <i class="bi bi-key-fill"></i> Senha <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.Password" 
                           class="form-control" 
                           type="password"
                           placeholder="Mínimo 6 caracteres"
                           required
                           minlength="6"
                           title="Senha deve ter no mínimo 6 caracteres, incluindo maiúsculas, minúsculas e números"
                           oninvalid="this.setCustomValidity('A senha deve ter no mínimo 6 caracteres.')"
                           oninput="this.setCustomValidity('')" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="form-text">
                        <i class="bi bi-info-circle"></i> A senha deve conter: mínimo 6 caracteres, letras maiúsculas, minúsculas e números
                    </div>
                </div>

                <!-- Confirmar Senha -->
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        <i class="bi bi-key-fill"></i> Confirmar Senha <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.ConfirmPassword" 
                           class="form-control" 
                           type="password"
                           placeholder="Digite a senha novamente"
                           required
                           minlength="6"
                           title="As senhas devem ser idênticas"
                           oninvalid="this.setCustomValidity('Por favor, confirme a senha.')"
                           oninput="this.setCustomValidity('')" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="Input.Role" class="form-label">
                        <i class="bi bi-shield-fill"></i> Nível de Acesso <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Input.Role" 
                            class="form-select"
                            required
                            title="Selecione o nível de acesso"
                            oninvalid="this.setCustomValidity('Por favor, selecione um nível de acesso.')"
                            oninput="this.setCustomValidity('')">
                        <option value="">-- Selecione o nível de acesso --</option>
                        <option value="Administrador">Administrador (acesso total)</option>
                        <option value="Visualizador" selected>Visualizador (somente leitura)</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                    <div class="form-text">
                        <i class="bi bi-info-circle"></i> <strong>Administrador:</strong> pode criar, editar e excluir | <strong>Visualizador:</strong> apenas visualizar
                    </div>
                </div>

                <!-- Botões -->
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle-fill"></i> Criar Usuário
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

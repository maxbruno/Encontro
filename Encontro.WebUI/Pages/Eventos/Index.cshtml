@page
@model Encontro.WebUI.Pages.Eventos.IndexModel

@{
    ViewData["Title"] = "Eventos";
    ViewData["Breadcrumbs"] = "<li class='breadcrumb-item'><a asp-page='/Index'>Home</a></li><li class='breadcrumb-item active' aria-current='page'>Eventos</li>";
}

<div class="container mt-4">
    <!-- Mensagem de Sucesso -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Cabeçalho -->
    <div class="row mb-3">
        <div class="col">
            <h1><i class="bi bi-calendar-event-fill"></i> Eventos</h1>
        </div>
        <div class="col text-end">
            @if (User.IsInRole("Administrador"))
            {
                <a asp-page="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Novo Evento
                </a>
            }
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h3 class="text-primary">@Model.TotalEvents</h3>
                    <p class="mb-0 text-muted">Total de Eventos</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-info">
                <div class="card-body">
                    <h3 class="text-info">@Model.SeguiMeEvents</h3>
                    <p class="mb-0 text-muted">Segue-me</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h3 class="text-success">@Model.ECCEvents</h3>
                    <p class="mb-0 text-muted">ECC</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros e Busca</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">Buscar</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" 
                               class="form-control" 
                               name="SearchTerm" 
                               value="@Model.SearchTerm" 
                               placeholder="Nome do evento..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Tipo</label>
                    <select class="form-select" name="FilterType">
                        <option value="">Todos</option>
                        <option value="SeguiMe" selected="@(Model.FilterType == "SeguiMe")">Segue-me</option>
                        <option value="ECC" selected="@(Model.FilterType == "ECC")">ECC</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Limpar Filtros
                    </a>
                    <span class="text-muted ms-3">
                        Mostrando @Model.Events.Count de @Model.TotalEvents resultados
                    </span>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a asp-page="Index" 
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-FilterType="@Model.FilterType"
                                   asp-route-SortBy="name" 
                                   asp-route-SortOrder="@(Model.SortBy == "name" && Model.SortOrder == "asc" ? "desc" : "asc")"
                                   class="text-white text-decoration-none">
                                    Nome 
                                    @if (Model.SortBy == "name")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-page="Index" 
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-FilterType="@Model.FilterType"
                                   asp-route-SortBy="type" 
                                   asp-route-SortOrder="@(Model.SortBy == "type" && Model.SortOrder == "asc" ? "desc" : "asc")"
                                   class="text-white text-decoration-none">
                                    Tipo 
                                    @if (Model.SortBy == "type")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-page="Index" 
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-FilterType="@Model.FilterType"
                                   asp-route-SortBy="date" 
                                   asp-route-SortOrder="@(Model.SortBy == "date" && Model.SortOrder == "asc" ? "desc" : "asc")"
                                   class="text-white text-decoration-none">
                                    Data de Criação 
                                    @if (Model.SortBy == "date" || string.IsNullOrEmpty(Model.SortBy))
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th style="width: 150px;">Participantes</th>
                            <th style="width: 250px;" class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Events.Any())
                        {
                            @foreach (var eventItem in Model.Events)
                            {
                                <tr>
                                    <td>@eventItem.Name</td>
                                    <td>
                                        @if (eventItem.EventType == Encontro.Domain.Entities.EventType.SeguiMe)
                                        {
                                            <span class="badge bg-primary">Segue-me</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">ECC</span>
                                        }
                                    </td>
                                    <td>@eventItem.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge bg-info">
                                            @(Model.EventParticipantCounts.ContainsKey(eventItem.Id) ? Model.EventParticipantCounts[eventItem.Id] : 0) 
                                            participante(s)
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="Details" asp-route-id="@eventItem.Id" class="btn btn-sm btn-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Administrador"))
                                        {
                                            <a asp-page="Edit" asp-route-id="@eventItem.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@eventItem.Id" class="btn btn-sm btn-danger" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
                                    <p class="mt-2">Nenhum evento encontrado</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

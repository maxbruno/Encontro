@page "{id:int?}"
@model Encontro.WebUI.Pages.Pessoas.DeleteModel

@{
    ViewData["Title"] = "Excluir Pessoa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h1 class="mb-4 text-danger">Excluir Pessoa</h1>

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle"></i> Atenção!
                </h4>
                <p class="mb-0">Ao confirmar, esta pessoa será <strong>inativada</strong>. Os dados e vínculos com eventos serão mantidos, mas a pessoa não aparecerá mais nas listagens.</p>
            </div>

            <!-- Exibir erros de validação somente se houver erros -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            }

            <!-- Card de Eventos Vinculados -->
            @if (Model.EventParticipations.Any())
            {
                <div class="card mb-3 border-info">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-event"></i> 
                            Participações em Eventos (@Model.EventParticipations.Count())
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            Esta pessoa está inscrita nos seguintes eventos. Ao inativar, os vínculos serão mantidos no histórico.
                        </p>
                        <div class="list-group">
                            @foreach (var participation in Model.EventParticipations)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@participation.Event.Name</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> @participation.RegisteredAt.ToString("dd/MM/yyyy")
                                                @if (participation.Team != null)
                                                {
                                                    <span class="ms-2">
                                                        <i class="bi bi-people"></i> @participation.Team.Name
                                                    </span>
                                                }
                                                @if (participation.Role != null)
                                                {
                                                    <span class="ms-2">
                                                        <i class="bi bi-briefcase"></i> @participation.Role.Name
                                                    </span>
                                                }
                                            </small>
                                        </div>
                                        <a asp-page="/Eventos/Details" asp-route-id="@participation.EventId" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver Evento
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    @if (!string.IsNullOrWhiteSpace(Model.Person.PhotoUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.Person.PhotoUrl" alt="Foto de @Model.Person.Name" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Name)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Type)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Type)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.BirthDate)</dt>
                        <dd class="col-sm-9">@(Model.Person.BirthDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.CellPhone)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.CellPhone)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Phone)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Phone)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Email)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Group)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Group)</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Person.Id" />
                        <div class="mt-4">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-person-x"></i> Confirmar Inativação
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

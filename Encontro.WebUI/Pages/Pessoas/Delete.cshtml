@page
@model Encontro.WebUI.Pages.Pessoas.DeleteModel

@{
    ViewData["Title"] = "Excluir Pessoa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h1 class="mb-4 text-danger">Excluir Pessoa</h1>

            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle"></i> Atenção!
                </h4>
                <p class="mb-0">Você tem certeza que deseja excluir esta pessoa?</p>
            </div>

            <div class="card">
                <div class="card-body">
                    @if (!string.IsNullOrWhiteSpace(Model.Person.PhotoUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="~/@Model.Person.PhotoUrl" alt="Foto de @Model.Person.Name" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Name)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Type)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Type)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.BirthDate)</dt>
                        <dd class="col-sm-9">@(Model.Person.BirthDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.CellPhone)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.CellPhone)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Phone)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Phone)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Email)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Person.Group)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Person.Group)</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Person.Id" />
                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

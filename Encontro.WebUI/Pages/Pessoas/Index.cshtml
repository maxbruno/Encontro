@page
@model Encontro.WebUI.Pages.Pessoas.IndexModel

@{
    ViewData["Title"] = "Pessoas";
    ViewData["Breadcrumbs"] = "<li class='breadcrumb-item'><a asp-page='/Index'>Home</a></li><li class='breadcrumb-item active' aria-current='page'>Pessoas</li>";
}

<div class="container mt-4">
    <!-- Mensagem de Sucesso -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Cabeçalho -->
    <div class="row mb-3">
        <div class="col">
            <h1><i class="bi bi-people-fill"></i> Pessoas</h1>
        </div>
        <div class="col text-end">
            @if (User.IsInRole("Administrador"))
            {
                <a asp-page="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nova Pessoa
                </a>
            }
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h3 class="text-primary">@Model.TotalPeople</h3>
                    <p class="mb-0 text-muted">Total de Pessoas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h3 class="text-success">@Model.PeopleWithPhoto</h3>
                    <p class="mb-0 text-muted">Com Foto</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h3 class="text-warning">@Model.PeopleWithoutPhoto</h3>
                    <p class="mb-0 text-muted">Sem Foto</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros e Busca</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Buscar</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" 
                               class="form-control" 
                               name="SearchTerm" 
                               value="@Model.SearchTerm" 
                               placeholder="Nome, tipo, email, telefone ou grupo..." />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tipo</label>
                    <select class="form-select" name="FilterType">
                        <option value="">Todos</option>
                        <option value="Casal" selected="@(Model.FilterType == "Casal")">Casal</option>
                        <option value="Jovem" selected="@(Model.FilterType == "Jovem")">Jovem</option>
                        <option value="Adolescente" selected="@(Model.FilterType == "Adolescente")">Adolescente</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Foto</label>
                    <select class="form-select" name="FilterPhoto">
                        <option value="">Todos</option>
                        <option value="with" selected="@(Model.FilterPhoto == "with")">Com Foto</option>
                        <option value="without" selected="@(Model.FilterPhoto == "without")">Sem Foto</option>
                    </select>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Limpar Filtros
                    </a>
                    <span class="text-muted ms-3">
                        Mostrando @Model.People.Count de @Model.TotalPeople resultados
                    </span>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 80px;">Foto</th>
                            <th>
                                <a asp-page="Index" 
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-FilterType="@Model.FilterType"
                                   asp-route-FilterPhoto="@Model.FilterPhoto"
                                   asp-route-SortBy="name" 
                                   asp-route-SortOrder="@(Model.SortBy == "name" && Model.SortOrder == "asc" ? "desc" : "asc")"
                                   class="text-white text-decoration-none">
                                    Nome 
                                    @if (Model.SortBy == "name")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-page="Index" 
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-FilterType="@Model.FilterType"
                                   asp-route-FilterPhoto="@Model.FilterPhoto"
                                   asp-route-SortBy="type" 
                                   asp-route-SortOrder="@(Model.SortBy == "type" && Model.SortOrder == "asc" ? "desc" : "asc")"
                                   class="text-white text-decoration-none">
                                    Tipo 
                                    @if (Model.SortBy == "type")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>Celular</th>
                            <th>
                                <a asp-page="Index" 
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-FilterType="@Model.FilterType"
                                   asp-route-FilterPhoto="@Model.FilterPhoto"
                                   asp-route-SortBy="email" 
                                   asp-route-SortOrder="@(Model.SortBy == "email" && Model.SortOrder == "asc" ? "desc" : "asc")"
                                   class="text-white text-decoration-none">
                                    Email 
                                    @if (Model.SortBy == "email")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-page="Index" 
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-FilterType="@Model.FilterType"
                                   asp-route-FilterPhoto="@Model.FilterPhoto"
                                   asp-route-SortBy="group" 
                                   asp-route-SortOrder="@(Model.SortBy == "group" && Model.SortOrder == "asc" ? "desc" : "asc")"
                                   class="text-white text-decoration-none">
                                    Núcleo 
                                    @if (Model.SortBy == "group")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th style="width: 180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.People.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    Nenhuma pessoa cadastrada.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.People)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(item.PhotoUrl))
                                        {
                                            <img src="~/@item.PhotoUrl" alt="Foto" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <i class="bi bi-person-circle" style="font-size: 50px; color: #ccc;"></i>
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>@item.CellPhone</td>
                                    <td>@item.Email</td>
                                    <td>@item.Group</td>
                                    <td>
                                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Administrador"))
                                        {
                                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
